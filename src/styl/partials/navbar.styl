.nav
  align-items center
  background-color transparent
  border-bottom solid 1px $whitE
  display flex
  height 70px
  justify-content space-between
  left 0
  padding 0 40px
  position fixed
  top 0
  width 100%
  z-index 12

  &-logo
    height 33px
    width 117px

    &-container
      height 33px

  &-scroll
    align-items center
    background-color $greenT2
    border-bottom solid 1px $greenT2
    box-shadow 0 6px 8px 0 rgba(0,0,0,0.2)
    height 70px

  &-option
    color $whitE
    font-size $fs13
    letter-spacing 1.1px

    &-phone
      align-items center
      color $whitE
      display flex
      font-size $fs13
      letter-spacing 1.9px

      &-container
        align-items center
        display flex

      &:before
        background-image url("../img/icons/icon-phone.png")
        background-repeat no-repeat
        background-size cover
        content ""
        display inline-block
        height 16px
        margin 0 9px 0 50px
        width 14px

    &:hover
    &.active-section
      color $greenT1

    &-container
      display flex
      flex-direction row

    &-content
      margin-left 30px
      position relative

.hamburger
  &-visibility
    position absolute

  &-menu
    &-container
      display none

@media screen and (max-width: 560px)
  .nav
    justify-content space-between
    height 70px
    padding 0 35px

    &-option
      &-container
        display none

      &-content
        margin 0 0 40px 35px

        & a
          padding 8px 0

      &-phone
        margin-left 35px

        &:before
          margin-left 0

        &-container
          border-top solid 1px $whitE

          &:before
            content ""
            margin-top 90px

  .hamburger
    background-color transparent
    display flex
    height 33px
    justify-content center
    width 33px

    &-visibility
      cursor pointer
      position initial

    &-logo
      height 20px
      width 94px

    &-close
      height 16px
      cursor pointer
      width 16px

    &-menu
      &-container
        background-color $greenT2
        display inline
        bottom 0
        left 0
        overflow scroll
        padding-bottom 50px
        position fixed
        top 0
        -webkit-transition width 0.5s
        transition width 0.5s
        width 0%
        z-index 13

      &-header
        align-items center
        display flex
        flex-direction row
        justify-content space-between
        padding 18px 36px 50px 35px

    &-text
      color white
      padding 10px 0

      &-container
        margin 35px 0

    &-active,
    &-text:hover
      font-weight bold
      text-decoration underline

    &-line
      &-icon
        background-color #fff
        height 2px
        width 20px

        &-container
          display flex
          flex-direction column
          justify-content center

        &:nth-child(2)
          margin 4px 0

        &:last-child
          width 12px
