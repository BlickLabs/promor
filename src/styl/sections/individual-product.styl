.starProds
  margin-top 70px
  padding-top 74px
  position relative

  &-background
    bottom 0
    display flex
    flex-direction column
    left 0
    position absolute
    right 0
    top 0

    &:before,
    &:after
      background-position center
      background-repeat no-repeat
      background-size cover
      content ""

    &:before
      background-image url("/img/star-products/despulpadora-imagen-difuminada.jpg")
      height 100%

    &:after
      background-image url("/img/star-products/despulpadora-imagen-verde.jpg")
      background-size 100% 40vh
      height 300px
  
  &-sheet
    background-color $whitE
    box-shadow 0 2px 30px 0 rgba(0, 0, 0, 0.27)
    padding 45px 0 55px 100px
    position relative
    width 809px

    &-img
      height 329px
      position absolute
      right -160px
      top 36px
      width 375px

    &-content
      width 453px

    &-title
      color $blackT1
      font-size $fs30
      letter-spacing 1px
      line-height 37px
      margin-bottom 15px

    &-subtitle
      color $grayT1
      font-size $fs15
      letter-spacing 0.1px
      line-height 20px
      margin-bottom 8px

    &-desc
      color $grayT1
      font-size $fs14
      letter-spacing 0.1px
      line-height 20px
      margin-bottom 12px

    &-ul
      border-bottom solid 1px $grayT2
      list-style none
      margin 0 0 19px 0
      padding 0 0 0 24px

    &-li
      color $grayT1
      font-size $fs14
      letter-spacing 0.1px
      line-height 18px
      margin 10px 0 16px 0
      position relative

      &:before
        background-color $greenT1
        border-radius 100px
        content ""
        display block
        height 6px
        left -24px
        position absolute
        top 6px
        width 6px

  &-table
    border-collapse collapse
    margin-top 15px
    width 389px

    & tr
      height 33px

    & tr th:nth-child(odd),
    & tr td:nth-child(odd)
      width 206px

    & tr th:nth-child(even),
    & tr td:nth-child(even)
      width 183px
      position relative

      &:before
        background-color $whitE
        bottom 0
        content ""
        left 0
        position absolute
        top 0
        width 1px

    & tr th,
    & tr td
      padding-left 18px

    & tr:nth-child(odd) td
      background-color $grayT3

    & tr th
      color $whitE
      font-size $fs13
      letter-spacing 0.6px
      text-align left
      text-transform uppercase

      &:nth-child(1)
        background-color $greenT2
        border-right solid 1px $greenT2

      &:nth-child(2)
        background-color $greenT4

    & tr td
      color $grayT1
      font-size 13px
      letter-spacing -0.1px

      &:nth-child(1)
        border-right solid 1px $greenT2

#descWithBorders
  border-bottom solid 1px $grayT2
  border-top solid 1px $grayT2
  padding 15px 0

@media screen and (min-width 1366px)
  .starProds
    &-sheet
      margin 0 auto

@media screen and (max-width 1020px)
  .starProds
    &-sheet
      margin 0 auto
      padding 50px 60px
      width 574px

      &-img
        position initial

    &-table
      &-container
        margin-bottom 30px

@media screen and (max-width 620px)
  .starProds
    padding-top 10%

    &-sheet
      padding 10%
      width 90%

      &-content
        width auto

      &-img
        height auto
        width 100%

    &-table
      &-container
        overflow auto
