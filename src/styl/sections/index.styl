@media screen and (max-width 930px)
  .home
    &-products
      &-bg
        min-width 240px

      &-star
        &-desc
          padding-left 40px

      &-btn
        &-container
          margin-left 40px

    &-machinery
      height 314px
      padding 0 40px
      width 90%

      &-subtitle
        padding-right 20px

    &-allies
      width 90%

@media screen and (max-width 760px)
  .home
    &-products
      &-bg
        min-width 100px
      &-carousel
        & .owl-nav
          bottom -16px
          left 134px
          top initial

      &-btn
        &-container
          margin-top 55px

    &-machinery
      flex-direction column
      height auto
      padding 40px 40px 50px 40px

      &-subtitle
        padding-right 0

      &-card
        &-container
          margin-top 35px

    &-clients
      &-carousel
        width 550px

    &-cup
      &-bg
        background-position right
        width 440px

