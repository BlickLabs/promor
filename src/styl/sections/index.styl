        font-size $fs25

      &-subtitle
        max-width 220px

      &-carousel
        margin-left -44px

        & .owl-nav
          left 160px

    &-machinery
      &-title
        font-size $fs25

      &-card
        width 120px

        &-container
          width 253px

    &-clients
      padding 60px 50px

      &-title
        line-height 35px
        font-size $fs25

      &-carousel
        width 163px

    &-cup
      &-bg
        height 465px
        padding-top 40px
        width 100%

      &-info
        width 218px

      &-title
        font-size $fs25

      &-desc
        font-size $fs16
        line-height 25px
        width auto

    &-allies
