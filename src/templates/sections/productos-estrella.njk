{% extends "partials/base.njk" %}

{% block title %}Productos estrella{% endblock %}

{% set view_name = "starProducts" %}

{% block content %}
<section class="products">
  <section class="products-cover"></section>
  <section class="products-card">
    <h1 class="products-card-title bigcaslon-medium">{{es.starProducts.title}}</h1>
    <p class="products-card-desc karla">{{es.starProducts.desc}}</p>
    <div class="products-card-content">
      {% for card in es.starProducts.cards %}
      <a class="products-item-link" href="{{card.link}}">
        <div class="products-item-img-container">
          <img class="products-item-img" src="{{card.img}}" alt="{{card.imgAlt}}">
        </div>
        <div class="products-item-title-container">
          <span class="products-item-title karla-bold">{{card.title}}</span>
        </div>
      </a>
      {% endfor %}
    </div>
  </section>
</section>
{% endblock %}
